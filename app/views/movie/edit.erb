<% form_for(@movie, url_for(:movies, :update, :movie_id => @movie.id)) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :year %>
  <%= f.text_field :year %>
  <%= f.submit :update %>
<% end %>

<%= link_to "Back", url_for(:movies, :show, :slug => @movie.slug) %>

